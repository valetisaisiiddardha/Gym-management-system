                    <label>Membership Type</label>
                    <select id="membershipType">
                        <option value="basic">Basic - $29/month</option>
                        <option value="premium">Premium - $49/month</option>
                        <option value="elite">Elite - $79/month</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Start Date</label>
                    <input type="date" id="startDate">
                </div>
                <button class="btn btn-primary" onclick="addMember()">Add Member</button>
            </div>

            <!-- Quick Actions -->
            <div class="card">
                <h2>‚ö° Quick Actions</h2>
                <div class="active-members">
                    <button class="btn" onclick="checkIn()">‚úÖ Check-in Member</button>
                    <button class="btn" onclick="generateReport()">üìà Generate Report</button>
                    <button class="btn" onclick="sendNotifications()">üì± Send Notifications</button>
