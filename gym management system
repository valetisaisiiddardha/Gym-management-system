    <script>
        // Sample member data
        let members = [
            { id: 1, name: 'Mike Johnson', email: 'mike@gym.com', type: 'elite', joinDate: '2025-01-15', status: 'active', checkins: 28 },
            { id: 2, name: 'Sarah Wilson', email: 'sarah@gym.com', type: 'premium', joinDate: '2025-02-01', status: 'active', checkins: 22 },
            { id: 3, name: 'David Chen', email: 'david@gym.com', type: 'basic', joinDate: '2025-03-10', status: 'active', checkins: 15 },
            { id: 4, name: 'Emily Davis', email: 'emily@gym.com', type: 'elite', joinDate: '2025-01-20', status: 'active', checkins: 31 }
        ];

        let nextId = 5;
        let revenueData = [1200, 1350, 1280, 1450, 1620];

        // Initialize dashboard
        function initDashboard() {
            updateStats();
            renderMembers();
            initRevenueChart();
            document.getElementById('startDate').value = new Date().toISOString().split('T')[0];
        }

        function updateStats() {
            document.getElementById('totalMembers').textContent = members.length;
            const activeToday = members.filter(m => m.status === 'active').length;
            document.getElementById('activeMembers').textContent = activeToday;
            document.getElementById('revenue').textContent = '$' + (activeToday * 55).toLocaleString();
            document.getElementById('attendance').textContent = Math.round(activeToday / members.length * 100) + '%';
        }

        function renderMembers() {
            const container = document.getElementById('memberList');
            container.innerHTML = members.slice(0, 8).map(member => `
                <div class="member-item">
                    <div class="member-info">
                        <h4>${member.name}</h4>
                        <div class="member-meta">
                            ${member.type.toUpperCase()} ‚Ä¢ ${member.checkins} check-ins
                        </div>
                    </div>
                    <div>
                        <span style="color: ${member.status === 'active' ? '#27ae60' : '#e74c3c'}; font-weight: 600;">
                            ${member.status.toUpperCase()}
                        </span>
                    </div>
                </div>
            `).join('');
        }

        function addMember() {
            const name = document.getElementById('memberName').value;
            const email = document.getElementById('memberEmail').value;
            const type = document.getElementById('membershipType').value;
            const date = document.getElementById('startDate').value;

            if (!name || !email) {
                alert('Please fill in name and email');
                return;
            }

            members.unshift({
                id: nextId++,
                name,
                email,
                type,
                joinDate: date,
                status: 'active',
                checkins: 0
            });

            document.getElementById('memberName').value = '';
            document.getElementById('memberEmail').value = '';
            updateStats();
            renderMembers();
            alert('Member added successfully! üéâ');
        }

        function checkIn() {
            const activeMembers = members.filter(m => m.status === 'active');
            if (activeMembers.length > 0) {
                const randomMember = activeMembers[Math.floor(Math.random() * activeMembers.length)];
                randomMember.checkins++;
                updateStats();
                renderMembers();
                alert(`‚úÖ ${randomMember.name} checked in!`);
            }
        }

        function generateReport() {
            const totalRevenue = members.length * 55;
            alert(`üìà Monthly Report Generated!\n\nTotal Members: ${members.length}\nActive: ${members.filter(m => m.status === 'active').length}\nRevenue: $${totalRevenue.toLocaleString()}`);
        }

        function sendNotifications() {
            alert('üì± SMS/Email notifications sent to all active members!');
        }

        function exportData() {
            const dataStr = JSON.stringify(members, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = `gym_members_${new Date().toISOString().split('T')[0]}.json`;
            link.click();
        }

        function initRevenueChart() {
            const canvas = document.createElement('canvas');
            canvas.width = 300;
            canvas.height = 180;
            document.getElementById('revenueChart').appendChild(canvas);
            
            const ctx = canvas.getContext('2d');
            const gradient = ctx.createLinearGradient(0, 0, 0, 200);
            gradient.addColorStop(0, 'rgba(78, 205, 196, 0.8)');
            gradient.addColorStop(1, 'rgba(78, 205, 196, 0.2)');

            // Simple bar chart
            const maxRevenue = Math.max(...revenueData);
            revenueData.forEach((revenue, index) => {
                const barWidth = 40;
                const barHeight = (revenue / maxRevenue) * 140;
                const x = index * 55 + 20;
                
                ctx.fillStyle = gradient;
                ctx.fillRect(x, 200 - barHeight, barWidth, barHeight);
                ctx.fillStyle = 'white';
                ctx.font = '12px Segoe UI';
                ctx.textAlign = 'center';
                ctx.fillText(`$${revenue}`, x + barWidth/2, 190);
            });
        }

        // Auto check-ins simulation
        setInterval(() => {
            if (Math.random() < 0.3 && members.length > 0) {
                checkIn();
            }
        }, 10000);

        // Initialize
        window.onload = initDashboard;
    </script>
</body>
</html>
